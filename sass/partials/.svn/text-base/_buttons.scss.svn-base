.btn {
	 @include gotham(bold);
	 font-weight: 100;
	 font-size: 24px;
	 line-height: 24px;
	 color:#fff;
	 padding: 18px 65px 21px;
	 box-shadow:0 3px 0 #0b506f;
	 background: green;
	 display: block;
	 border-radius: 4px;
	 float: left;
	 border-top:1px solid #0AB55F;
	 margin-bottom: 8px;
}	

.darkgreengradient {
	background: rgb(9,169,81); /* Old browsers */
	/* IE9 SVG, needs conditional override of 'filter' to 'none' */
	background: url(data:image/svg+xml;base64,);
	background: -moz-linear-gradient(top,  rgba(9,169,81,1) 0%, rgba(5,152,64,1) 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(9,169,81,1)), color-stop(100%,rgba(5,152,64,1))); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top,  rgba(9,169,81,1) 0%,rgba(5,152,64,1) 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top,  rgba(9,169,81,1) 0%,rgba(5,152,64,1) 100%); /* Opera 11.10+ */
	background: -ms-linear-gradient(top,  rgba(9,169,81,1) 0%,rgba(5,152,64,1) 100%); /* IE10+ */
	background: linear-gradient(to bottom,  rgba(9,169,81,1) 0%,rgba(5,152,64,1) 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#09a951', endColorstr='#059840',GradientType=0 ); /* IE6-8 */
}

.lightgreengradient {
	background: rgb(10,202,99); /* Old browsers */
	/* IE9 SVG, needs conditional override of 'filter' to 'none' */
	background: url(data:image/svg+xml;base64,);
	background: -moz-linear-gradient(top,  rgba(10,202,99,1) 0%, rgba(5,191,80,1) 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(10,202,99,1)), color-stop(100%,rgba(5,191,80,1))); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top,  rgba(10,202,99,1) 0%,rgba(5,191,80,1) 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top,  rgba(10,202,99,1) 0%,rgba(5,191,80,1) 100%); /* Opera 11.10+ */
	background: -ms-linear-gradient(top,  rgba(10,202,99,1) 0%,rgba(5,191,80,1) 100%); /* IE10+ */
	background: linear-gradient(to bottom,  rgba(10,202,99,1) 0%,rgba(5,191,80,1) 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#0aca63', endColorstr='#05bf50',GradientType=0 ); /* IE6-8 */
}