body {
	background:url("../img/pattern-footer.png") repeat scroll 0 0 rgba(0, 0, 0, 0);
}
* {
	margin:0;
	padding:0;
	-moz-box-sizing: border-box; 
	-webkit-box-sizing: border-box; 
	box-sizing: border-box;
}
header, nav, section, article, aside, footer {
   display:block;
}
.container {
	width:100%;
	overflow:hidden;
	float:left;
	clear:both;
}
.error {
	color:red !important;
	border-color:red !important;
}
.wrapper {
	max-width:850px;
	width:90%;
	margin: 0 auto;
	overflow: hidden;
	clear:both;
	.inner {
		max-width: 823px;
		width:90%;
		overflow: hidden;
		margin: 0 auto;
	}
}
.base {
	width:100%;
	float: left;
	margin-top:56px;
	background:#fff;
}
form {
	width:100%;
	overflow:hidden;
}
input, textarea {
	width:100%;
	border:2px solid #c0d7de;
	background:#fff;
	color:#ebebeb;
	border-radius:4px;
	font-size:24px;
	@include gotham(reg);
	text-align:center;
	padding:17px;
	margin-bottom:20px;
}
input[type=submit] {
	@extend .btn;
	@extend .lightgreengradient;
	box-shadow: 0 3px 0 #e4e6e7;
	width:99%;
}
section {
	width: 100%;
	overflow: hidden;
	clear: both;
}
section.everythingcentered {
	overflow:hidden;
	padding:50px 0;
	h2 {
	 	text-align: center;
	}
	p {
		text-align: center;
	}
}
.hide {
	display: none;
}
.show {
	display:block;
}